/**index.wxss**/

.arrow{
 
width: 10px;
 
height: 10px;
 
border-top: 2px solid #999;
 
border-right: 2px solid #999;
 
position: absolute;
 
right: 20rpx;
 
transform: rotate(45deg);
 
margin-top:10rpx;
 
}

.srcoll_view{
position: absolute;
top:0rpx;
height: 100rpx;
font-size: 30rpx;
white-space: nowrap;
line-height: 100rpx;
color: #00bff3;
animation:myfirst 20s linear infinite;
}

.scroll_view_border{
position: relative;
width: 100%;
background: rgba(0, 0, 0, 0.2);
height: 100rpx;
overflow: hidden;
}









