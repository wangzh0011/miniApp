<!--pages/InformaTion/user.wxml-->
<view class='page'>



  <view class="userinfo">

    <open-data class="userinfo-avatar" background-size="cover" type="userAvatarUrl"></open-data>
    <open-data class="userinfo-nickname" type="userNickName" data-ooo="userinfo-nickname"></open-data>
    
  </view>



  <form bindsubmit='SubMit' bindreset='Reet'>

    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{errormsg}}</view>


    <block wx:if="{{userType == 'vessel'}}">
      <view class="weui-cells__title">船舶资料修改</view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">船名</view>
        </view>
        <view class="weui-cell__bd">
          <input name="userName" class="weui-input" placeholder="请输入您的姓名" placeholder-class="phcolor" value='{{userName}}' />
        </view>
      </view>
    </block>
    <block wx:else>
      <view class="weui-cells__title">车主资料修改</view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
          <input name="userName" class="weui-input" placeholder="请输入您的姓名" placeholder-class="phcolor" value='{{userName}}' />
        </view>
      </view>
    </block>
    

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">手机号码</view>
      </view>
      <view class="weui-cell__bd">
        <input name="phone_number" class="weui-input" type='number' maxlength='11' placeholder-class="phcolor" placeholder="请正确填写手机号码" value='{{userNumber}}' />
      </view>
    </view>

    <block wx:if="{{userType == 'truck'}}">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">身份证</view>
        </view>
        <view class="weui-cell__bd">
          <input name="cardid" class="weui-input" placeholder="请输入身份证号码" maxlength='18' placeholder-class="phcolor" value='{{userCardId}}' />
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">车牌号码</view>
        </view>
        <view class="weui-cell__hd">
          <picker bindchange="bindprovCodeChange" value="{{provCodeIndex}}" range="{{prov}}">
            <view class="weui-select">{{prov[provCodeIndex]}}</view>
          </picker>
        </view>
        <view class="weui-cell__bd">
          <input name="truck_lic" class="weui-input" style='padding-left:25rpx' placeholder="请输入车牌号码" bindinput='changinput' maxlength='6' placeholder-class="phcolor" value='{{truck_lic}}' />
        </view>
        <view class="weui-cell__hd">
          <picker bindchange="bindcolorCodeChange" value="{{colorCodeIndex}}" range="{{colorCodes}}">
            <view class="weui-select uicostom">{{colorCodes[colorCodeIndex]}}</view>
          </picker>
        </view>
      </view>
    </block>

    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">用户类型</view>
        </view>
        <view class="weui-cell__hd">
          <picker bindchange="bindUserTypeChange" value="{{userTypeIndex}}" range="{{userTypeOnPage}}">
            <view class="weui-select">{{userTypeOnPage[userTypeIndex]}}</view>
          </picker>
        </view>
    </view>

    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" formType="submit">确定</button>
    </view>
  </form>
</view>